<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.n1akai.gamesstore.frags.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_gameDetailFragment"
            app:destination="@id/gameDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/signinFragment"
        android:name="com.n1akai.gamesstore.frags.SigninFragment"
        android:label="@string/sign_in"
        tools:layout="@layout/fragment_signin">
        <action
            android:id="@+id/action_LoginFragment_to_registerFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_LoginFragment_to_loginWithEmailAndPassFragment"
            app:destination="@id/signinWithEmailAndPassFragment"
            app:popUpTo="@id/userFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_LoginFragment_self"
            app:destination="@id/signinFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.n1akai.gamesstore.frags.CartFragment"
        android:label="Your cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.n1akai.gamesstore.frags.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <action android:id="@+id/action_global_searchFragment" app:destination="@id/searchFragment" />
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.n1akai.gamesstore.frags.SignupFragment"
        android:label="@string/signup"
        tools:layout="@layout/fragment_signup">
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/signinWithEmailAndPassFragment"
        android:name="com.n1akai.gamesstore.frags.SigninWithEmailAndPassFragment"
        android:label="@string/sign_in"
        tools:layout="@layout/fragment_signin_with_email_and_pass" />
    <fragment
        android:id="@+id/gameDetailFragment"
        android:name="com.n1akai.gamesstore.frags.GameDetailFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_game_detail">
        <argument
            android:name="game"
            app:argType="com.n1akai.gamesstore.models.Game" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/userFragment"
        android:name="com.n1akai.gamesstore.frags.UserFragment"
        android:label="My Profile"
        tools:layout="@layout/fragment_user">
        <action
            android:id="@+id/action_userFragment_to_loginFragment"
            app:destination="@id/signinFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_userFragment_to_updateUserFragment"
            app:destination="@id/updateUserFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_userFragment"
        app:destination="@id/userFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/updateUserFragment"
        android:name="com.n1akai.gamesstore.frags.UpdateUserFragment"
        android:label="Account Settings"
        tools:layout="@layout/fragment_update_user" >
        <argument
            android:name="user"
            app:argType="com.n1akai.gamesstore.models.User" />
    </fragment>
</navigation>